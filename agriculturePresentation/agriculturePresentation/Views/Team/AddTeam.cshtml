@model EntityLayer.Concreate.Team
@{
    ViewData["Title"] = "AddTeam";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Add New Teammate</h4>
                  <form class="forms-sample" method="post">
                    <div class="form-group">
                      <label for="exampleInputName1">Name</label>
                      <span asp-validation-for="PersonName" class="text-danger"></span>
                      <input type="text" class="form-control"  placeholder="Name" asp-for="PersonName">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">Task</label>
                      <span asp-validation-for="Title" class="text-danger"></span>
                      <input type="text" class="form-control" placeholder="Task" asp-for="Title">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">Image</label>
                      <span asp-validation-for="ImageUrl" class="text-danger"></span>
                      <input type="text" class="form-control" placeholder="Image" asp-for="ImageUrl">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">Facebook</label>
                      <input type="text" class="form-control" placeholder="Facebook" asp-for="FacebookUrl">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">Instagram</label>
                      <input type="text" class="form-control" placeholder="Instagram" asp-for="InstagramUrl">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">Twitter</label>
                      <input type="text" class="form-control" placeholder="Twitter" asp-for="TwitterUrl">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">WebSite</label>
                      <input type="text" class="form-control" placeholder="WebSite" asp-for="WebsiteUrl">
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary me-2">Add</button>
                </form>
                </div>
              </div>
            </div>
