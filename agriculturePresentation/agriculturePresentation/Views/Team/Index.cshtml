@using EntityLayer.Concreate
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_AdminLayout.cshtml";
}

            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">list of teammates</h4>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                            <th>#</th>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Task</th>
                            <th>Delete</th>
                            <th>Update</th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach (var item in Model)
                        {
                            
                        
                        <tr>
                          <td 
                              class="py-1"><img src="@item.ImageUrl" alt="image"/>
                          </td>
                          <td>@item.TeamId</td>
                          <td>@item.PersonName</td>
                          <td>@item.Title</td>
                          <td><a href="/Team/DeleteTeam/@item.TeamId" class="btn btn-outline-danger">Delete</a></td>
                          <td><a href="/Team/UpdateTeam/@item.TeamId" class="btn btn-outline-success">Update</a></td>
                        
                        </tr>
                        }
                      </tbody>
                    </table>
                    <br />
                    <a href="/Team/AddTeam/" class="btn btn-outline-github">New Add Team</a>
                  </div>
                </div>
              </div>
            </div>

