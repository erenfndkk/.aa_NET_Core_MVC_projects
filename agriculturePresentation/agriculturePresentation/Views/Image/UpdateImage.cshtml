@model EntityLayer.Concreate.Image
@{
    ViewData["Title"] = "UpdateImage";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Update Image Page</h4>
                  <form class="forms-sample" method="post">
                      <input type="hidden" asp-for="ImageID" />
                     <div class="form-group">
                      <label for="exampleInputName1">Title</label>
                      <span asp-validation-for="Title" class="text-danger"></span>
                      <input type="text" class="form-control"  placeholder="Title" asp-for="Title">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">ImageUrl</label>
                      <span asp-validation-for="ImageUrl" class="text-danger"></span>
                      <input type="text" class="form-control" placeholder="ImageUrl" asp-for="ImageUrl">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">Description</label>
                      <span asp-validation-for="Description" class="text-danger"></span>
                      <input type="text" class="form-control" placeholder="Description" asp-for="Description">
                    </div>
                   
                    <br />
                    <button type="submit" class="btn btn-primary me-2">Update</button>
                </form>
                </div>
              </div>
            </div>


