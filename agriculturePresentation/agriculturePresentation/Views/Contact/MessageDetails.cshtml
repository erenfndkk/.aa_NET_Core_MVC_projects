@model EntityLayer.Concreate.Contact

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Message Detail Page</h4>
                  <form class="forms-sample" method="post">
                    <div class="form-group">
                    @Html.HiddenFor(x => x.ContactID)
                      <label for="exampleInputName1">Name</label>
                      <span asp-validation-for="Name" class="text-danger"></span>
                      <input type="text" class="form-control" asp-for="Name">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputName1">Mail</label>
                      <span asp-validation-for="Mail" class="text-danger"></span>
                      <input type="text" class="form-control" asp-for="Mail">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputName1">Date</label>
                      <span asp-validation-for="Date" class="text-danger"></span>
                      <input type="text" class="form-control" asp-for="Date">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputName1">Message</label>
                      <span asp-validation-for="Message" class="text-success"></span>
                     <textarea class="form-control" cols="5" rows="20" asp-for="Message"></textarea>
                    </div>
                </form>
                </div>
              </div>
            </div>

