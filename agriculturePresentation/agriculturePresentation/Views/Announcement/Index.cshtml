@using EntityLayer.Concreate
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<h1>Index</h1>

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Announcement List</h4>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                         <th>#</th>
                         <th>Title</th>
                         <th>Date</th>
                         <th>Delete</th>
                         <th>Update</th>
                         <th>Make Active or Passive</th>
                        
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (var item in Model)
                        {
                                <tr>
                                    <td>@item.AnnouncementID</td>
                                    <td>@item.Title</td>
                                    <td>@item.Date</td>
                                    <td><a href="/Announcement/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-outline-danger">Delete</a></td>
                                    <td><a href="/Announcement/UpdateAnnouncement/@item.AnnouncementID" class="btn btn-outline-success">Update</a></td>
                                   
                                    @if(@item.Status == false)
                                    {
                                         <td> <a href="/Announcement/ChangeStatusToTrue/@item.AnnouncementID" class="btn btn-outline-success">Make Active</a></td>
                                    }
                                    else
                                    {
                                         <td> <a href="/Announcement/ChangeStatusToFalse/@item.AnnouncementID" class="btn btn-outline-success">Make Passive</a></td>
                                    }
                                    
                                </tr>
                        }
                      </tbody>
                    </table>
                    <br />
                    <a href="/Announcement/AddAnnouncement/" class="btn btn-outline-github">Add New Announcement</a>
                  </div>
                </div>
              </div>
            </div>