@model EntityLayer.Concreate.Admin
@{
    ViewData["Title"] = "UpdateAdmin";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Update Admin Page</h4>
                  <form class="forms-sample" method="post">
                      <input type="hidden" asp-for="AdminID" />
                     <div class="form-group">
                      <label for="exampleInputName1">Useename</label>
                      <span asp-validation-for="Username" class="text-danger"></span>
                      <input type="text" class="form-control"  placeholder="kullanıcı adınız" asp-for="Username">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">Password</label>
                      <span asp-validation-for="Password" class="text-danger"></span>
                      <input type="text" class="form-control" placeholder="şifreniz" asp-for="Password">
                    </div>
                   

                    <br />
                    <button type="submit" class="btn btn-primary me-2">Update</button>
                </form>
                </div>
              </div>
            </div>
