@using EntityLayer.Concreate
@model List<Admin>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Admin Listesi</h4>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                         <th>#</th>
                         <th>Kullanıcı Adı</th>
                         <th>Delete</th>
                         <th>Update</th>
                         
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (var item in Model)
                        {
                                    <tr>
                                        <td>@item.AdminID</td>
                                        <td>@item.Username</td>
                                     
                                        <td><a href="/Admin/DeleteAdmin/@item.AdminID" class="btn btn-outline-danger">Delete</a></td>
                                        <td><a href="/Admin/UpdateAdmin/@item.AdminID" class="btn btn-outline-success">Update</a></td>
                                    </tr>
                        }
                      </tbody>
                    </table>
                    <br />
                    <a href="/Admin/AddAdmin/" class="btn btn-outline-github">Add New Admin</a>
                  </div>
                </div>
              </div>
            </div>